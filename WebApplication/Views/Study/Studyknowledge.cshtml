
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Studyknowledge</title>
    <script src="~/js/vue.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <!-- 引入样式 -->
    <link rel="stylesheet" href="https://unpkg.com/element-ui/lib/theme-chalk/index.css">
    <!-- 引入组件库 -->
    <script src="https://unpkg.com/element-ui/lib/index.js"></script>
</head>
<body>
    <div id="app">

        <!--表头模糊查询-->
        <el-form :inline="true" class="demo-form-inline">
            <el-form-item label="知识名称:">
                <el-input placeholder="请输入需要查询知识....." v-model="T_Name"></el-input>
            </el-form-item>
            <el-form-item>
                <el-button type="success" size="small" v-on:click="Search"> 查询</el-button>
                <el-button type="danger" size="small" v-on:click="dialogFormVisible = true"> 添加</el-button>
            </el-form-item>
            <el-form-item label="知识类别:">
                
                <el-button type="success" size="small">搜索</el-button>
            </el-form-item>
        </el-form>
      
        <!--table表格-->
        <template>
            <el-table :data="tableData"
                      style="width:100%">
                <el-table-column type="index" width:"50">
                </el-table-column>

                <el-table-column property="Name"
                                 label="知识名称"
                                 width="180">
                </el-table-column>
                <el-table-column property="Sex"
                                 label="知识类型"
                                 width="180">
                </el-table-column>
                <el-table-column property="CuorseName"
                                 label="知识内容"
                                 width="180">
                </el-table-column>
                <el-table-column property="Subject_score"
                                 label="创建时间"
                                 width="180">
                </el-table-column>
                <el-table-column label="操作"
                                 width="180">
                    <!--自定义列-->
                    <template slot-scope="scope">
                        <el-button type="primary" size="mini" v-on:click="Edit(scope.row)" class="el-icon-edit" circle>   </el-button> &nbsp;
                        <el-button type="danger" size="mini" v-on:click="Delete(scope.row)" class="el-icon-delete" circle> </el-button>
                    </template>
                </el-table-column>
            </el-table>
            <!--分页控件-->
            <el-pagination v-on:size-change="handleSizeChange"
                           v-on:current-change="handleCurrentChange"
                           :page-sizes="[2,3,5,10]"
                           :page-size=2
                           layout="total,sizes,prev,pager,next,jumper"
                           :total="total">
            </el-pagination>
        </template>

    </div>
    <script src="~/js/Studyknowledge.js"></script>
</body>
</html>
